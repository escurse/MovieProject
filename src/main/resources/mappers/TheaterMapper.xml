<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.escass.movieproject.mappers.TheaterMapper">
    <select id="getRegionAll"
            parameterType="com.escass.movieproject.entities.RegionEntity">
        SELECT `reg_num`  AS `regNum`,
               `reg_name` AS `regName`
        FROM `jgv`.`region`
    </select>
    <select id="getTheaterAll"
            parameterType="com.escass.movieproject.entities.TheaterEntity">
        SELECT th_num  AS `thNum`,
               th_name AS `thName`,
               th_addr AS `thAddr`,
               th_img  AS `thImg`,
               reg_num AS `regNum`
        FROM `jgv`.`theater`
        LIMIT 1
    </select>
    <select id="getTheatersAll"
            parameterType="com.escass.movieproject.entities.TheaterEntity">
        SELECT th_num  AS `thNum`,
               th_name AS `thName`,
               th_addr AS `thAddr`,
               th_img  AS `thImg`,
               reg_num AS `regNum`
        FROM `jgv`.`theater`
    </select>
</mapper>